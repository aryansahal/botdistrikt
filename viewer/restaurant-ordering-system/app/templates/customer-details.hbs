<div class="customer-details-container">
  <h1 class="heading-primary">Customer Details</h1>
  <table class="customer-info-table">
    <tbody>
      <tr>
        <th>Username</th>
        <td>{{this.model.customer.username}}</td>
      </tr>
      <tr>
        <th>Email</th>
        <td>{{this.model.customer.email}}</td>
      </tr>
    </tbody>
  </table>

  <div class="order-history">
    <h2 class="heading-secondary">Order History</h2>
    <table class="orders-list-table">
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Order Date</th>
          <th>Total Amount</th>
        </tr>
      </thead>
      <tbody>
        {{#each this.model.orders as |order|}}
          <tr class="order-item">
            <td>{{order.id}}</td>
            <td>{{order.orderDate}}</td>
            <td>${{order.totalAmount}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>